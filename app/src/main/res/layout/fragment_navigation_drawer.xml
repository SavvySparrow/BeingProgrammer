<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f8f9"
    tools:context="pj.ess.dee.beingaprogrammer.Fragments.NavigationDrawerFragment">

    <RelativeLayout
        android:id="@+id/drawer_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/Drawer_title"
            android:layout_width="@dimen/drawer_potrait_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/Drawer_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="0dp"
                android:text="B"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Drawer_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="2dp"
                android:text="eing"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Drawer_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="1dp"
                android:text="P"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Drawer_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="2dp"
                android:text="rogrammer"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Drawer_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Drawer_title"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="Learn. Design. Market"
            android:textSize="10dp" />

        <View
            android:id="@+id/title_divider1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.5"
            android:background="@drawable/toolbar_dropshadow1"></View>
    </RelativeLayout>

    <View
        android:id="@+id/title_divider2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/drawer_container"
        android:alpha="0.5"
        android:background="@drawable/toolbar_dropshadow"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_divider2">

    </android.support.v7.widget.RecyclerView>



















    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">



        <Switch
            android:id="@+id/fullscreen_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryText"
            android:text="Full Screen"
            android:paddingRight="50dp"
            android:textSize="13sp"/>



    </LinearLayout>

</RelativeLayout>
