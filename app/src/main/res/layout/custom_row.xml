<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:gravity="start"
    android:orientation="vertical">

    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rv_color="@color/colorGrey"
        app:rv_rippleDuration="150"
        ripple:rv_type="rectangle">

        <LinearLayout
            android:id="@+id/drawerListButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/drawer_listviewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.7"
                android:padding="8dp"
                android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/drawer_listviewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:text="Item 1 "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>
    </com.andexert.library.RippleView>



</LinearLayout>
